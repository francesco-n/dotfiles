set $inactive-text-color #676E7D
set $urgent-bg-color #2f343f

# window colors
#                       border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          #00f5fa
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color #00f5fa
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #00f5fa
client.urgent $urgent-bg-color $urgent-bg-color $text-color #00f5fa

